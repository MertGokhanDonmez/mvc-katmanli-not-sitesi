@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}


<script>
        function Login() {
                var name = document.getElementById("Admin").value;
                var pass = document.getElementById("AdminPass").value;
                if (name == "adminstrator" && pass == "123four") {
                   window.open('@Url.Action("Index", "Home")');
            }
        }
</script>

<form>
	<div class="input-group form-group">
		<div class="input-group-prepend">
			<span class="input-group-text"><i class="fas fa-user"></i></span>
		</div>
		<input type="text" id="Admin" class="form-control" required placeholder="username">
	</div>
	<div class="input-group form-group">
		<div class="input-group-prepend">
			<span class="input-group-text"><i class="fas fa-key"></i></span>
		</div>
		<input type="password" id="AdminPass" class="form-control" required placeholder="password"/>
	</div>
	<div class="row align-items-center remember">
		<input type="checkbox">Remember Me
	</div>
	<div class="form-group">
		<input type="submit" value="Login" onclick="Login()" class="btn float-right login_btn">
	</div>
</form>
                    